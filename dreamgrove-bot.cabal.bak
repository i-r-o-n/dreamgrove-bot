cabal-version:       2.2

name:                dreamgrove-bot
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/i-r-o-n/dreamgrove-bot#readme
author:              i-r-o-n
-- category:            Web
build-type:          Simple
extra-source-files:  readme.md
                     changelog.md

library
    hs-source-dirs:     src
    exposed-modules:     Bot
    -- other-modules:
    -- other-extensions:
    build-depends:     base 
                     , discord-haskell
                     , text
                     , yaml
                     -- , aeson
                     -- , containers
                     -- , mtl
                     -- , directory
                     -- , filepath
    default-language:   Haskell2010

executable dreamgrove-bot

  hs-source-dirs:      app
  main-is:             Main.hs
  default-language:    Haskell2010
  build-depends:       base
                     , text
                     , discord-haskell
  ghc-options:         -threaded
                       -Wall
                       -Wcompat
                       -Widentities
                       -Wincomplete-record-updates
                       -Wincomplete-uni-patterns
                       -Wmissing-export-lists
                       -Wmissing-home-modules
                       -Wpartial-fields
                       -Wredundant-constraints
